<h1>Корзина</h1>

<div id="cart" class="mb2">
{{#if courses.length}}
	<table class="responsive-table">
		<thead>
			<tr>
				<th>Название</th>
				<th>Количество</th>
				<th>Действия</th>
			</tr>
		</thead>
		<tbody>
			{{#each courses}}
				<tr>
					<td>{{title}}</td>
					<td>{{count}}</td>
					<td>
						<button type="button" class="btn btn-small grey darken-4" onclick="window.cart.removeCourse('{{_id}}')">
							  <i class="material-icons">close</i>
						</button>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
	<p class="right">
		<strong>Цена: </strong>
		<span class="course-price">{{price}}</span>
	</p>

	<form action="/orders/" method="POST" class="mt2">
		<button type="submit" class="btn waves-effect waves-light btn-large orange lighten-1">Оформить заказ <i class="material-icons right">send</i></button>
	</form>
{{else}}
	<p>Корзина пуста</p>
{{/if}}
</div>